#include <iostream>
using namespace std;

// Функция для добавления блока элементов в конец массива
void appendElements(int*& arr, int& size, const int* elementsToAdd, int numElements) {
    // Создаем новый временный массив, который будет больше исходного массива
    int newSize = size + numElements;
    int* newArray = new int[newSize];

    // Копируем элементы из исходного массива в новый
    for (int i = 0; i < size; i++) {
        newArray[i] = arr[i];
    }

    // Копируем элементы, которые нужно добавить, в новый массив
    for (int i = 0; i < numElements; i++) {
        newArray[size + i] = elementsToAdd[i];
    }

    // Освобождаем память, занятую старым массивом
    delete[] arr;

    // Обновляем указатель и размер массива
    arr = newArray;
    size = newSize;
}

int main() {
    setlocale(0,"Russian");
    int size = 0;
    int* arr = nullptr;

    // Пример использования функции для добавления блока элементов
    int elementsToAdd[] = {10, 20, 30};
    int numElementsToAdd = sizeof(elementsToAdd) / sizeof(elementsToAdd[0]);

    appendElements(arr, size, elementsToAdd, numElementsToAdd);

    // Вывод элементов массива после добавления
    std::cout << "Массив после добавления блока элементов: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout <<endl;

    // Освобождение памяти
    delete[] arr;

    return 0;
}
