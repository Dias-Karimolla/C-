#include <iostream>
using namespace std;


void insertElements(int*& arr, int& size, int index, const int* S, int numS) {
    // Проверяем корректность индекса
    if (index < 0 || index > size) {
        cerr << "Ошибка" << endl;
        return;
    }

    //временный массив
    int newSize = size + numElements;
    int* newArray = new int[newSize];

    // Копируем
    for (int i = 0; i < index; i++) {
        newArray[i] = arr[i];
    }

    //вставить, в новый массив
    for (int i = 0; i < numElements; i++) {
        newArray[index + i] = elementsToInsert[i];
    }

    //элементы из исходного массива после индекса в новый массив
    for (int i = index; i < size; i++) {
        newArray[index + numElements + i] = arr[i];
    }

    
    delete[] arr;


    arr = newArray;
    size = newSize;
}

int main() {
    setlocale(0,"Russian");
    int size = 0;
    int* arr = nullptr;

    
    int S[] = {10, 20, 30};
    int numS = sizeof(S) / sizeof(S[0]);
    int IndexS = 2;

    insertElements(arr, size, IndexS, S, numS);

    // Вывод элементов массива после вставки
   cout << "Массив после вставки блока элементов: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
   cout << endl;


    return 0;
}
